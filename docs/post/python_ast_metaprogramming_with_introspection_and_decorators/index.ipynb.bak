  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "['--- \\n',\n",
      " '+++ \\n',\n",
      " '@@ -3 +3 @@\\n',\n",
      " \"-        FunctionDef(name='example_1',\",\n",
      " \"+        FunctionDef(name='example_1_expected',\",\n",
      " '@@ -19 +19 @@\\n',\n",
      " \"-                Return(value=Name(id='result'))],\",\n",
      " \"+                Return(value=Tuple(elts=[Name(id='result'), \"\n",
      " \"Call(func=Name(id='locals'), args=[], keywords=[])]))],\"]\n"
     ]
    }
